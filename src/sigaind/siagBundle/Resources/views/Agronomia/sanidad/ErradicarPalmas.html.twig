{% extends 'siagBundle::layoutMaestra.html.twig' %}

{% block title %}Ordenes Agronomia{% endblock %}

{% block head %}
<link href="{{ asset('bundles/sonatajquery/themes/base/jquery.ui.theme.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/sonatajquery/themes/base/jquery.ui.datepicker.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/sonatajquery/themes/base/jquery.ui.autocomplete.css') }}" rel="stylesheet" type="text/css" />

<script src="{{ asset('bundles/sigaind/js/table.filter.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/sigaind/js/agronomia/sanidad/ErradicacionPalmas.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        inicio();
    });
</script>

<style>
    .ui-autocomplete-loading {
        background: white url('{{ asset('bundles/sigaind/images/loader.gif') }}') right center no-repeat;
    }
</style>
{% endblock %}
    
{% block content %}

<div id="botones">
    <button type="button" onclick="NuevaErradicacion()">Nueva Erradicacion</button>
    <button type="reset" onclick="Consultar()">Buscar</button>
</div>

<div id="consulta" style="display: none">

    <table id='demotable1' class="tablaFiltro">      
      <tbody id="tblFormConsulta">
            <tr>
                <TD colspan="2">
                    BUSCAR ERRADICACIONES
                </td>                    
            </tr>
            <tr>
                    <td> Lote: </td>
                    <td>
                        <input type="text" id="loteC" name="" />
                    </td>
            </tr>
            <tr>
                    <td> Fecha Inicial: </td>
                    <td>
                        <input type="text" id="f1C" />
                    </td>
            </tr>
            <tr>
                    <td> Fecha Final: </td>
                    <td> 
                        <input type="text" id="f2C" />
                    </td>
            </tr>
      <tbody>   
  </table> 
    <button type="button" onclick="consultarErradicaciones()">Aceptar</button>
    <button type="button" onclick="CancelarConsulta()">Cancelar</button>
</div>

<div id="formulario" style="display: none">

    <table id='demotable1' class="tablaFiltro">      
      <tbody id="tblFormConsulta">            
          <tr>
              <TD colspan="2">
                    NUEVA ERRADICACION
                </td>                    
            </tr>  
          <tr>
                    <td> Lote: </td>
                    <td>
                        <input type="text" id="loteN" name="" />
                    </td>
            </tr>
            <tr>
                    <td> Linea: </td>
                    <td>
                        <input type="text" id="linea" />
                    </td>
            </tr>            
            <tr>
                    <td> Palma: </td>
                    <td>
                        <input type="text" id="palma" />
                    </td>
            </tr>
            <tr>
                    <td> Fecha: </td>
                    <td> 
                        <input type="text" id="f1N" />
                    </td>
            </tr>
            <tr>
                    <td> Causa: </td>
                    <td>
                        <select id="causa"> 
                            <option value="-1">--</option>
                            {% for causa in causas %}
                                <option value="{{causa.cerrid}}">{{causa.cerrnombre}}</option>
                            {% endfor %}
                        </select>
                    </td>
            </tr>
      <tbody>   
  </table> 
    <button type="button" onclick="GuardarEradicacion()">Guardar</button>
    <button type="button" onclick="CancelarNuevaErradicacion()">Cancelar</button>
</div>

<div id="divTabla" style="display: none">
    <div id="info"></div>        
</div>
{% endblock %}
